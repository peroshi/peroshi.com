.nav-links
    @extend $font-karla
    @media ({$break-phone})
        flex: 1 1 49%
        display: flex
        align-items: center
        justify-content: flex-end

    > .link
        @extend $link-sub
        color: $main-grey
        display: block
        text-align: center
        @media ({$break-phone})
            &:not(:first-child)
                margin-left: $padding
