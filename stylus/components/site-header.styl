.site-header
    @media ({$break-phone})
        @extend $container
        display: flex
        padding: $padding
        box-sizing: border-box

    > .logo
        margin: 20px auto
        display: block
        width: 61%
        @media ({$break-phone})
            box-sizing: border-box
            flex: 1 1 49%
            margin: 0

    > .logo > svg
        display: block
        fill: #545454
        @media ({$break-phone})
            height: 30px

